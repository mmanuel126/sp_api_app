{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "FastAPI (Uvicorn)",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "app.main:app",            // replace with your actual file name and app instance
        "--port", "8000"
      ],
      "jinja": true,
      "env": {
        "ENVIRONMENT": "development"
      },
      "envFile": "${workspaceFolder}/.env", 
      "console": "integratedTerminal"
    }
  ]
}
